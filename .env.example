# OpenClaw Launcher - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Model Provider API Keys
# =============================================================================

# Required for all tiers
KIMI_API_KEY=your_kimi_api_key_here
TOAD_API_KEY=your_toad_api_key_here
CODEX_API_KEY=your_openai_api_key_here

# Required for privileged tier only
CLAUDE_CODE_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_google_key_here

# =============================================================================
# Telegram Configuration
# =============================================================================

TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Speech-to-Text Configuration
FORCE_MEDIA_UNDERSTANDING=true
WHISPER_MODEL=base
TRANSCRIPTION_PROVIDER=deepgram

# =============================================================================
# Google Workspace
# =============================================================================

# Path to your Google OAuth JSON file or the JSON content
GOOGLE_OAUTH=your_google_oauth_credentials_json

# =============================================================================
# Speech-to-Text API Keys
# =============================================================================

DEEPGRAM_API_KEY=your_deepgram_api_key_here
WHISPER_API_KEY=${KIMI_API_KEY}  # Can reuse Kimi key for Whisper API

# =============================================================================
# Plugin Management
# =============================================================================

PLUGINS_AUTO_UPDATE=true
CLAWHUB_AUTO_SYNC=true
PLUGIN_UPDATE_INTERVAL=86400

# =============================================================================
# Deacon Service
# =============================================================================

DEACON_MODE=daemon
HEALTH_CHECK_INTERVAL=300
BACKUP_INTERVAL=3600
ALERT_WEBHOOK_URL=
LOG_LEVEL=info

# =============================================================================
# Web UI (Optional)
# =============================================================================

LAUNCHER_UI_PORT=3000

# =============================================================================
# Resource Configuration (Privileged Tier)
# =============================================================================

# CPU and memory limits are set in docker-compose.yml
# These are here for documentation purposes:
# NORMAL_CPU_LIMIT=4
# NORMAL_MEMORY_LIMIT=16G
# PRIVILEGED_CPU_LIMIT=8
# PRIVILEGED_MEMORY_LIMIT=128G
